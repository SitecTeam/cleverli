---
export const prerender = true;

import "../styles/global.css";
import Header from "@/components/header";
import Footer from "@/components/footer";
import GetInTouchSection from "@/components/get-in-touch-section";
import DarkPanel from "@/components/dark-panel";
import { LocationSection } from "@/components/location-section";
import globeUrl from "@/svgs/location/globe.svg?url";
import MapSvg from "../svgs/location/map.svg?react";
import GlassPinSvg from "../svgs/location/glass-pin.svg?react";
import PinSvg from "../svgs/location/pin.svg?react";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Contact Us | Cleverli</title>
  </head>
  <body
    class="flex min-h-screen flex-col items-center gap-8 overflow-x-hidden bg-linear-to-br from-slate-50 to-slate-100 lg:p-8"
  >
    <Header client:load pathname={Astro.url.pathname} />
    <div class="flex w-full max-w-360 flex-col gap-10 px-4 lg:gap-32 lg:px-0">
      <p
        class="font-frutiger mx-auto text-center text-2xl font-normal text-slate-800 italic lg:mt-32 lg:max-w-5xl lg:text-[40px] lg:leading-12"
      >
        Let’s build smarter learning together. Reach out to schedule a free
        consultation or discuss your specific needs.
      </p>
      <GetInTouchSection client:load />

      <div class="mt-10 lg:mt-20">
        <LocationSection client:load />
      </div>

      <div class="relative px-4 lg:px-0">
        <!-- Globe + Pin Container -->
        <div
          class="absolute top-0 left-1/2 -z-10 w-full -translate-x-1/2 -translate-y-1/2 sm:top-[30%]"
        >
          <div class="relative w-full">
            <img src={globeUrl} class="w-full" />

            <!-- Pin -->
            <div
              class="absolute top-[12%] left-[75%] h-[35%] w-[35%] -translate-x-1/2 -translate-y-1/2"
            >
              <GlassPinSvg className="absolute z-10 h-full w-full" />
              <div
                class="absolute right-[11%] left-[11%] flex aspect-square items-center justify-center overflow-hidden rounded-full"
              >
                <MapSvg
                  className="z-20 hidden h-[70%] w-[70%] object-cover lg:block"
                />
                <PinSvg
                  className="absolute top-[42%] left-[57%] z-30 -translate-x-1/2 -translate-y-1/2"
                />
              </div>
            </div>
          </div>
        </div>

        <DarkPanel
          client:load
          title="Not Sure If Cleverli Fits Your Sector?"
          description="Let’s talk. We tailor learning to the needs of any knowledge-focused organization with full-service support every step of the way."
          buttonText="Sectors"
          buttonLink="/sectors"
          className="-mx-8"
        />
      </div>
      <Footer client:load />
    </div>
  </body>
</html>
