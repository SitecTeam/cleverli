---
import "../styles/global.css";
import Header from "@/components/header";
import Footer from "@/components/footer";
import { ServiceCard } from "@/components/service-card";
import { data } from "@/components/carousel-accordion-section/data";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Services | Cleverli</title>
  </head>
  <body
    class="flex min-h-screen flex-col items-center gap-8 overflow-x-hidden bg-linear-to-br from-slate-50 to-slate-100 lg:p-8"
  >
    <Header client:load pathname={Astro.url.pathname} />
    <div
      class="flex w-full max-w-360 flex-col gap-10 p-4 pb-0 lg:gap-20 lg:px-0"
    >
      <!-- Page Header -->
      <div class="text-center">
        <h1 class="text-3xl font-bold text-[#1B6B93] lg:text-5xl">
          Our Services
        </h1>
        <p class="mt-4 text-gray-600 lg:text-lg">
          Comprehensive e-learning solutions tailored to your needs
        </p>
      </div>

      <!-- Service Cards -->
      <div class="flex flex-col gap-6 lg:gap-10">
        {
          data.map(service => (
            <ServiceCard
              title={service.title}
              items={service.details}
              imageSrc={service.src}
              imageAlt={service.title}
            />
          ))
        }
      </div>
    </div>
    <Footer client:load />
  </body>
</html>
